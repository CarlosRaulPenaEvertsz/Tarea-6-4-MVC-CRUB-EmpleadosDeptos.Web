@model Tarea6_4.Models.SigIn

@{
    ViewBag.Title = "Usuarios";
}

<div class="jumbotron">
    <div class="container">
        <div class="card card-container">
            <h2 class="panel-title">Iniciar Sesi&oacute;n</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @using (Html.BeginForm("Usuarios", "Home", FormMethod.Post, new { @class = "form-signin" }))
            {
                <div class="form-group">
                    @Html.TextBoxFor(dl => dl.Email, new { @class = "form-control", @placeholder = "Email..." })
                    @Html.ValidationMessageFor(dl => dl.Email, "", new { @class = "text-danger" })
                </div>

                <div>
                    @Html.PasswordFor(dl => dl.Password, new { @class = "form-control", @placeholder = "Password..." })
                    @Html.ValidationMessageFor(dl => dl.Password, "", new { @class = "text-danger" })
                </div>

                <input type="submit" value="Entrar" class="btn btn-primary btn-block" />
            }

            @Html.ActionLink(" Sign In", "Sinin", "Home", null, new { @class = "glyphicon glyphicon-user" })

            @{
                if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <script type="text/javascript">
                        alert("El Email o Password Incorrecto!");
                        document.location = "Usuarios";
                    </script>
                }
            }
        </div>
    </div>
</div>
