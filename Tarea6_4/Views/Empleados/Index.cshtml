@model IEnumerable<Tarea6_4.Models.Empleado>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="modal fade" id="modalCreate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display:none;">

    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Registro de Empleados</h4>
            </div>

            <div class="modal-body">
                <div id="mostrar">
                    Cargando...
                </div>
            </div>

            <div class="modal-footer">

            </div>
        </div>

    </div>

</div>

<div class="row">
    <div class="col-mod-12">
        <a id="btnNuevo" data-toggle="modal" href="#modalCreate" class="btn btn-success">Create New</a>
    </div>
</div>

@*<p>
        @Html.ActionLink(" Create New", "Create", null, new { @class = "glyphicon glyphicon-plus btn btn-success" })
    </p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            Departamento
        </th>
        <th>Opciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.Descripcion)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" })
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-th-list" })
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#btnNuevo').click(function (eve) {
                $('#mostrar').load('/Empleados/Create');
            });
        });
    </script>
}
